# ISA SuperApp â€” Environment Example (do not commit real secrets)

# LLM runtime
ISA_LLM_PROVIDER=openrouter  # or: openai
ISA_FORBID_DIRECT_LLM=0      # set 1 to enforce orchestrator-only policy
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Memory & context
ISA_MEMORY_ADAPTERS=langchain,structured,memengine,zep,amem,aws,mcp
ISA_SLEEPTIME_MINUTES=30
ISA_MEMORY_FILE=./ISA_SuperApp/memory.json

# Observability
OTEL_ENABLED=0
OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4318

# Services (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# Auth/demo
ISA_AUTH_SECRET=change-me

# Authentication & Authorization
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
DATABASE_URL=sqlite:///./isa_auth.db


# Context7 Documentation Provider
CONTEXT7_ENABLED=0
CONTEXT7_API_URL="https://api.context7.com/v1"
CONTEXT7_PROJECT="your-project-id"
CONTEXT7_KEY="your-api-key"
CONTEXT7_CACHE_TTL=3600
CONTEXT7_ALLOWED_SOURCES=""
